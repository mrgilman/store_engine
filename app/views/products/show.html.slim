h3 = @product.title

p
  = @product.description

p
  = @product.price
p
  - @product.categories.each do |category|
    = category.name
    br

= form_for CartItem.new, :method => "put", :url => {:controller => 'shopping_cart', :action => "update", :product => @product } do |f|
  = f.label :quantity
  = f.select :quantity, options_for_select(1..30)
  = f.submit "Add to Cart", :product => @product

p
= link_to "Edit Product", edit_product_path(@product)
= link_to "Back to all products", products_path